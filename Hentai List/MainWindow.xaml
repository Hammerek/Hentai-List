<Window x:Class="Hentai_List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hentai_List"
        mc:Ignorable="d"
        Title="Hentai List" Height="350" Width="525">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="Red"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <DockPanel>
            <StackPanel Width="100">
                <Button x:Name="AddHentai" Content="Add Hentai" Height="67" Background="{DynamicResource Brush1}" Click="AddHentai_Click"/>
                <Button x:Name="List" Content="List" Height="67" Background="{DynamicResource Brush1}" Click="List_Click"/>
                <Button x:Name="Edit" Content="Edit" Height="67" Background="{DynamicResource Brush1}"/>
                
            </StackPanel>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        </DockPanel>
    </Grid>
</Window>
